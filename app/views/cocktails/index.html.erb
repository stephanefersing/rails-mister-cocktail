<div class="container">
  <h1>All cocktails</h1>
  <div class="row">
          <% @cocktails.each do |cocktail| %>
            <div class="col-4 my-3">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
            <% if cocktail.photo.attached? %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
              </div>
              <% end %>
            </div>
        <% end %>
  </div>
  <%= link_to "Add a new cocktail !", new_cocktail_path, class: 'btn btn-primary' %>
</div>


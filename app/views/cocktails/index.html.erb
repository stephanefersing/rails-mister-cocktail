<div class="container">
  <h1>All cocktails</h1>
  <div class="row">
          <% @cocktails.each do |cocktail| %>
            <div class="col-4 my-3">
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80)">
                <!-- <div %= image_tag "photo_cocktail.png", class:"card-category", style:"background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)" %> -->
                <%= link_to cocktail.name, cocktail_path(cocktail) %>
              </div>
            </div>
        <% end %>
  </div>
  <%= link_to "Add a new cocktail !", new_cocktail_path, class: 'btn btn-primary' %>
</div>


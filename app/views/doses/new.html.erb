<h1>Add your dose !</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>Create the dose below</h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, collection: Ingredient.order(:name) %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
